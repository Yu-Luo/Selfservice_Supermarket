<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-15dp"
    android:clickable="true"
    android:focusable="auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingTop="0dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-15dp"
            android:clickable="true"
            android:focusable="auto"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingTop="0dp">
            <ImageView
                android:id="@+id/smimage"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="?android:attr/selectableItemBackground"
                android:elevation="5dp"
                app:srcCompat="@mipmap/supermarket_default01" />

            <TextView
                android:id="@+id/smname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-45dp"
                android:elevation="5dp"
                android:shadowColor="#1d1d1d"
                android:shadowRadius="10"
                android:text="顺心超市"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="135dp"
                tools:layout_editor_absoluteY="97dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="-12dp"
                android:background="@drawable/background_s"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="13dp"
                    android:layout_marginLeft="12dp"
                    app:srcCompat="@drawable/ic_pin_drop_black_24dp" />

                <TextView
                    android:id="@+id/smaddres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="4dp"
                    android:text="A街道99号"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/smmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right"
                    android:text="9.5"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>
